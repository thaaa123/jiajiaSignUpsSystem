// 背景图片
bg-image($url)
  background-image: url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image: url($url + "@3x.png")

// 不换行
no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

// 扩展点击区域
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px

// 宽100%
wid-100()
  width: 100%

// 高100
hei-100()
  height: 100%

shadow()
  box-shadow: 2px 2px 9px rgba(86, 136, 133, .75)

vert-center()
  display: -webkit-flex
  display: flex
  -webkit-align-items: center
  align-items: center

just-center()
  display: -webkit-flex
  display: flex
  -webkit-justify-content: center
  justify-content: center

radius()
  border-radius: 0.125rem